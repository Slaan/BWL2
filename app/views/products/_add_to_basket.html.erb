<%= form_for(:basketposition) do |f| %>
  <div class="field">
    <strong>Add to basket:</strong><br>
    <%= f.label "Amount:" %>
    <%= f.number_field :amount, :value => 1 %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :product_id, :value => product %>
    <%= f.submit "Add to cart"%>
  </div>
<% end %>
