<h2>Listing products</h2>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Picture</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Amount</th>
      <th>Since</th>
      <th>Until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= link_to image_tag(product.picture.url(:thumb)), product %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.amount %></td>
        <td><%= product.since %></td>
        <td><%= product.until %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: 
                                            { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

