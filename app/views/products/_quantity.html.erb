<% # partial to show construction of products %>
<ul>
 <% product.productrelations.each do |relation| %>
   <% subproduct = relation.sub %>
   <% ausgabe = subproduct.name + " (" + relation.amount.to_s + ")"%>
   <li><%= link_to ausgabe, subproduct %></li>
   <% unless subproduct.subs.empty? %> 
     <%= render "quantity", :product => subproduct %>
   <% end %>
 <% end %>
</ul>
